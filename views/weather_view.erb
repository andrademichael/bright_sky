<div class="section section-over-image teal-text text-lighten-2">

  <!-- Top Row, current conditions -->

  <div class="row">
    <div class="col s12">
      <h1>Weather in <%= @city %>, <%= @state %></h1>
      <div class="row">
        <div class="col s12">
          <h3>Current Conditions</h3>
          <div class="row">
            <div class="col s6">
              <h4><%= @summary %></h4>
              <h4><%= @temp %> &deg;F</h4>
              <h4><span class="red-text text-lighten-2"><%= @high_temp %>&deg;</span>/<span class="blue-text text-lighten-2"><%= @low_temp %>&deg;</span></h4>
            </div>
            <div class="col s6">
              <h4>Feels like: <%= @feels_like %> &deg;F</h4>
              <h4>Humidity: <%= @humidity %>%</h4>
              <h4>Precipitation: <%= @chance_of_precip %>%</h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <h2 class="grey-text">3-Day Outlook</h2>
      <div class="row">
        <div class="col l4">
          <h3><%= @day1 %></h3>
          <h4><%= @day1_summary %></h4>
          <h4><span class="red-text text-lighten-2"><%= @day1_max %>&deg;</span>/<span class="blue-text text-lighten-2"><%= @day1_min %>&deg;</span></h4>
          <h4>Precipitation: <%= @day1_precip %>%</h4>
        </div>
        <div class="col l4">
          <h3><%= @day2 %></h3>
          <h4><%= @day2_summary %></h4>
          <h4><span class="red-text text-lighten-2"><%= @day2_max %>&deg;</span>/<span class="blue-text text-lighten-2"><%= @day2_min %>&deg;</span></h4>
          <h4>Precipitation: <%= @day2_precip %>%</h4>
        </div>
        <div class="col l4">
          <h3><%= @day3 %></h3>
          <h4><%= @day3_summary %></h4>
          <h4><span class="red-text text-lighten-2"><%= @day3_max %>&deg;</span>/<span class="blue-text text-lighten-2"><%= @day3_min %>&deg;</span></h4>
          <h4>Precipitation: <%= @day3_precip %>%</h4>
        </div>
      </div>
    </div>
  </div>
</div>

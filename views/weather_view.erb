<div class="section section-over-image teal-text text-lighten-2">
  <div class="row">
    <div class="col s12">
      <h1>Weather in <%= @city %>, <%= @state %></h1>
      <div class="row">
        <div class="col s6">
          <h3>Current Conditions</h3>
          <div class="row">
            <div class="col s6">
              <h4><%= @summary %></h4>
              <h4><%= @temp %> &deg;F</h4>
              <h4><span class="red-text text-lighten-2"><%= @high_temp %>&deg;</span>/<span class="blue-text text-lighten-2"><%= @low_temp %>&deg;</span></h4>
            </div>
            <div class="col s6">
              <h4>Feels like: <%= @feels_like %> &deg;F</h4>
              <h4>Humidity: <%= @humidity %>%</h4>
              <h4>Precipitation: <%= @chance_of_precip %>%</h4>
            </div>
          </div>
        </div>

        <div class="col s6">
          <h4>3-Day Outlook</h4>
          <div class="row">
            <div class="col s4">
              <h5><%= @day1 %></h5>
              <p><%= @day1_summary %></p>
              <p><span class="red-text text-lighten-2"><%= @day1_max %>&deg;</span>/<span class="blue-text text-lighten-2"><%= @day1_min %>&deg;</span></p>
              <p>Precipitation: <%= @day1_precip %>%</p>
            </div>
            <div class="col s4">
              <h5><%= @day2 %></h5>
              <p><%= @day2_summary %></p>
              <p><span class="red-text text-lighten-2"><%= @day2_max %>&deg;</span>/<span class="blue-text text-lighten-2"><%= @day2_min %>&deg;</span></p>
              <p>Precipitation: <%= @day2_precip %>%</p>
            </div>
            <div class="col s4">
              <h5><%= @day3 %></h5>
              <p><%= @day3_summary %></p>
              <p><span class="red-text text-lighten-2"><%= @day3_max %>&deg;</span>/<span class="blue-text text-lighten-2"><%= @day3_min %>&deg;</span></p>
              <p>Precipitation: <%= @day3_precip %>%</p>
            </div>
          </div>
        </div>

      </div>
      <a href="/" class="waves-effect waves-green btn">Home</a>
    </div>
  </div>

</div>
